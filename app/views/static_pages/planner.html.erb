<% provide(:title, "Planner") %>
<header>
  <nav class="top-nav white">
    <a href="#"><img class="textShadow brand-logo" style="height: 50px; top:5px; margin-left:60px" src="/planner/img/logo.png"></a>
    <div class="container">
      <div class="nav-wrapper">
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="fa fa-bars orange-text text-darken-3" aria-hidden="true"></i></a>
        <ul class="right hide-on-med-and-down">
        <li><%= link_to "Home", root_path, class: "orange-text waves-effect waves-light left" %></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_user_registration_path, class: "orange-text waves-effect waves-light" %></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "orange-text waves-effect waves-light"%></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign In', new_user_session_path, class: "orange-text waves-effect waves-light"%></li>
            <li><%= link_to 'Sign Up', new_user_registration_path,  class: "orange-text waves-effect waves-light"%></li>
          <% end %>
          <li><a href="http://www.Ristormarkt.com"><img class="textShadow" style="height: 60px; top:2px" src="/planner/img/Logo Ristormarkt.png"></a></li>
        </ul>

      </div>
    </div>
  </nav>

  <ul class="side-nav fixed" id="mobile-demo">
    <li style="height: 120px"><a style="height: 120px" href="#"><img class="textShadow brand-logo" style="height: 80px; top:15px" src="/planner/img/logo.png"></a></li>
    <% if user_signed_in? %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= current_user.name %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Profile', edit_user_registration_path, class: "orange-text waves-effect waves-light" %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "orange-text waves-effect waves-light"%></li>
        </ul>
      </li>
    <% end %>
    <ul class="tabs">
      <li class="tab"><a class="active" href="#build"><i class="fa fa-object-group orange-text text-darken-3 fa-2x"></i></a></li>
      <li class="tab"><a href="#equipments"><i class="mdi-serach orange-text">search</i></a></li>
    </ul>

    <div id="build" class="col s12">
       Layout
    </div>

    <div id="equipments" class="col s12">
      <ul>
       <li class="no-padding">
         <ul class="collapsible collapsible-accordion">
           <li class="bold"><a class="collapsible-header  waves-effect waves-teal">Categorie3</a>
             <div class="collapsible-body">
               <ul>
                 <% @equipments.each do |equipment| %>
                 <li>
                   <a href="#" ondragend="addCollada('<%= equipment.collada_url%>')"> <img src="<%= equipment.image_url%>" id="<%= equipment.code%>" style="height:50px; width:50px" /></a>
                 </li>
                 <% end %>
               </ul>
             </div>
           </li>
         </ul>
       </div>
  </ul>
  </ul>
</header>
