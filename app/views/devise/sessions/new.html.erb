<% provide(:title, "Sign In") %>
<br><br>
<div class="container">
  <h3 class="orange-text center">Sign In</h3>
  <br>
  <div class="row" >
      <div class="col s6 offset-m3">
        <div class="card-panel z-depth-5 " style="height: 370px;">
          <div class="row">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col s12 m11"}) do |f| %>
              <div class="row">
              <div class="input-field col s12 m12">
                <i class="fa fa-envelope-o prefix orange-text"></i>
                <%= f.email_field :email, autofocus: true, id: "icon_email", html:{type: "email", class: "validate"} %>
                <label for="icon_email">email</label>
              </div>

              <div class="input-field col s12 m12">
                <i class="fa fa-unlock-alt prefix orange-text"></i>
                <%= f.password_field :password, autocomplete: "off", id: "icon_password", html:{type: "password", class: "validate"} %>
                <label for="icon_password">password</label>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field" style="margin-left:16px">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
              <br>
              <%= render "devise/shared/links" %>
              <br>
              <div class="actions input-field col s12 m11 offset-m1">
                <%= f.submit "Log in", class: "btn orange waves-effect waves-light" %>
                <%= link_to 'Sign Up', new_user_registration_path,  class: "btn orange white-text waves-effect waves-light right"%>
              </div>
            <% end %>
            </div>
          </div><!--row-->
        </div><!--card-->
      </div>
  </div>
</div><!--conatiner-->
